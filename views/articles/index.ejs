<%- include('./partials/header') %> 

  <h1>This is the articles!</h1>

  <div>
    <a href="/articles/new">Write New Post</a>
  </div>

  <main>
    <% for (let article of articles) { %>
      <div class="card my-3">
        <div class="row">
          <div class="col-md-4">
            <img class="card-image img-thumbnail" alt="" src="<%=article.img%>">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= article.title %> </h5>
              <p class="card-text"><%= article.quote %> </p>
              <p class="text-muted"><%= article.topic %> </p>
              <a class="btn btn-primary" href="/articles/<%= article._id %>">View Post</a>
            </div>
          </div>

        </div>
      </div> 

    <% } %>

</main>

  
<%- include('./partials/footer') %> 
